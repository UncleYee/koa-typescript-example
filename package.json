{
  "name": "koa-typescript-example",
  "version": "0.0.1",
  "description": "example REST API using Typescript, Koa, Sequlize",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=development nodemon ./src/index.ts",
    "start:pm2": "cross-env NODE_ENV=development pm2 start ./src/index.ts --name server-name",
    "start:prod:pm2": "cross-env NODE_ENV=production pm2 start ./src/index.ts -i 0 --name server-name",
    "build": "tsc",
    "deploy": "bash ./scripts/deploy.sh",
    "dev": "pm2 start dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UncleYee/koa-typescript-example.git"
  },
  "keywords": [
    "koa",
    "typescript"
  ],
  "author": "uncleye159@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UncleYee/koa-typescript-example/issues"
  },
  "homepage": "https://github.com/UncleYee/koa-typescript-example#readme",
  "dependencies": {
    "convict": "^4.4.0",
    "koa": "^2.5.1",
    "koa-body": "^4.0.4",
    "koa-compose": "^4.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "log4js": "^3.0.6",
    "sequelize": "^4.41.0",
    "x2js": "^3.2.1"
  },
  "devDependencies": {
    "@types/convict": "^4.2.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.28",
    "@types/lodash": "^4.14.117",
    "@types/log4js": "^2.3.5",
    "@types/node": "^10.3.2",
    "@types/sequelize": "^4.27.28",
    "@types/x2js": "^3.1.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-alloy": "^1.4.2",
    "eslint-plugin-typescript": "^0.12.0",
    "nodemon": "^1.17.5",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.1",
    "typescript-eslint-parser": "^16.0.0"
  }
